@model IEnumerable<tasarım1.Models.Apartlar>

@{
    ViewBag.Title = "Apartlar";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout2.cshtml";
}
<br>
<h2>Apartlar</h2>

<p>
    @Html.ActionLink("Apart Ekle", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.telefon)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.adres)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.eposta)
        </th>
