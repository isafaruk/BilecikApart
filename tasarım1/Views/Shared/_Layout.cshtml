<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light" style="margin-top:-50px">
        <div class="container px-4 px-lg-5">
            <a class="navbar-brand" href="/Home">Bilecik Apart</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0 ms-lg-4">
                    <li class="nav-item"><a class="nav-link" aria-current="page" href="/Home/Index">Anasayfa</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Home/Apart">Apartlar</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Home/Contact">İletişim</a></li>
                </ul>
                <ul class="navbar-nav navbar-right">
                    @if (Session["Login"] != null)
                    {
                        <li class="nav-item"><a class="nav-link" aria-current="page" href="/User/UserProfile">@Session["Login"].ToString() </a></li>
                        <li class="nav-item"><a class="nav-link" href="/Login/Logout">Çıkış</a></li>
                    }
                    else
                    {
                        <li class="nav-item"><a class="nav-link" aria-current="page" href="/Login/Index">Giriş</a></li>
                    }

                </ul>

            </div>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
    </div>
    

    
        <footer class="container navbar-light bg-light">
            <div>
