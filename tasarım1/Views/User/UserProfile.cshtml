
@{
    ViewBag.Title = "UserProfile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br>
<h2>Kullanıcı Profili</h2>
@ViewBag.Message
<br>
<br>
<form method="post" asp-controller="User" asp-action="UserProfile">
    <div class="mb-3">
        <input type="password" class="form-control align-self-center" id="oldPass" placeholder="Eski Parolanız" name="oldPass">
    </div>
    <div class="mb-3">
        <input type="password" class="form-control align-self-center" id="newPass" placeholder="Yeni Parolanız" name="newPass">
    </div>
    <div class="mb-3">
        <input type="password" class="form-control align-self-center" id="authPass" placeholder="Parolanızı Doğrulayın" name="authPass">
    </div>

    <div class="mb-3">
        <button type="submit" style="width:150px" class="btn btn-primary d-flex justify-content-center">Şifremi Değiştir</button>
    </div>
</form>

