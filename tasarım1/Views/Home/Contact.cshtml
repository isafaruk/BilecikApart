            <form method="post" asp-controller="Home" asp-action="Contact">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="name" class="col-form-label required">Adınız</label>
                            <input name="name" type="text" class="form-control" id="name" placeholder="Adınız" required>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="email" class="col-form-label required">E-mail Adresiniz</label>
                            <input name="email" type="email" class="form-control" id="email" placeholder="E-mail" required>
                        </div>
                    </div>
                </div>

                
                    <div class="form-group ">
                        <label for="subject" class="col-form-label">Başlık</label>
                        <input style="width:800px" name="subject" type="text" class="form-control" id="subject" placeholder="Başlık">
                    </div>

                    <div class="form-group">
                        <label for="message" class="col-form-label required">Mesajınız</label>
                        <textarea name="message" id="message" class="form-control" rows="4" placeholder="Mesajınız" required></textarea>
                    </div>
                    <br>
                    <button type="submit" class="btn btn-primary ">Gönder</button>
                
                
            </form>

